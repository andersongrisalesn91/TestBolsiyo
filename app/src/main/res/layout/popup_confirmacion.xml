<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/blanco_fondopop">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/fondospop"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/IVTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TVTitulo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            app:srcCompat="@drawable/fondosmi" />

        <TextView
            android:id="@+id/TVTitulo"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/francois_one"
            android:hint="Titulo"
            android:paddingStart="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textAlignment="viewStart"
            android:textColor="#5B8AFF"
            android:textColorHint="#5B8AFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TVTextoconf"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVTitulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/francois_one"
            android:hint="Texto de confirmaciÃ³n"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/blanco_transparente"
            android:textColorHint="@color/blanco_transparente"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonConfNo"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/TVTextoconf"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btmenu"
            android:text="Cancelar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonConfSi"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/buttonConfNo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btmenu"
            android:text="@string/confirmar"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>